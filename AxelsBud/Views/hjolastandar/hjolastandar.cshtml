@model AxelsBud.Models.hjolastandar
@{
    ViewBag.Title = "Hjólastandar";
}
<link href="~/MyCss/hjolin.css" rel="stylesheet" type="text/css" />
<link href="~/MyCss/hjolaStandar.css" rel="stylesheet" type="text/css" />
<link href="~/MyCss/vorur.css" rel="stylesheet" type="text/css" />
<html>
<body>
    <div class="row" id="standarar_rows_title">
        <h1>Reiðhjólastandar</h1>
    </div>
    <div class="row" id="standarar_rows_content">

        <ul>
            <h2> Vandaðir Reiðhjólastandar </h2>
            <li>Íslensk framleiðsla</li>
            <li>Heitgalf</li>
            <li>Ryðga ekki</li>
            <li>Teininnn massífur í gegn</li>
            <li>Framleiddir fyrir 3,4,5 og 6 hjól</li>
        </ul>
    </div>
    <div class="row" id="standarar_rows_img">
        <img id="myImg" src="~/images/reidhjol_standarar.png" />
    </div>
    <!-- The Modal -->
    <div id="myModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="img01" onclick="bigImg">
        <div id="caption"></div>
    </div>
</body>
</html>
<script>
    // Get the modal
    var modal = document.getElementById('myModal');

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    var img = document.getElementById('myImg');
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");
    img.onclick = function () {
        var a = document.getElementById('myndir').style.display = "none";
        modal.style.display = "block";
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
    }

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        var a = document.getElementById('myndir').style.display = "";
        modal.style.display = "none";
    }
    document.addEventListener('keydown', (event) => {
        if (event.key == "Escape") {
            var a = document.getElementById('myndir').style.display = "";
            modal.style.display = "none";
        }
    });
</script>
