@model AxelsBud.Models.hjolastandar
@{
    ViewBag.Title = "Hjólastandar";
}
<head>
    <link href="~/MyCss/hjolin.css" rel="stylesheet" type="text/css" />
    <link href="~/MyCss/hjolaStandar.css" rel="stylesheet" type="text/css" />
    <link href="~/MyCss/vorur.css" rel="stylesheet" type="text/css" />
    <link href="~/MyCss/heimildamyndir.css" rel="stylesheet" type="text/css" />
    <link href="~/MyCss/hjolastandarar.css" rel="stylesheet" type="text/css" />
</head>
<html>
<body>
    <div class="row doc_wrapper">
        <h1 class="doc_heading">Vandaðir íslenskir reiðhjólastandar</h1>
        <div class="doc_text">
            <ul class="hjolastandarar_listi">
                <li>Íslensk framleiðsla</li>
                <li>Heitgalf</li>
                <li>Ryðga ekki</li>
                <li>Teininnn massífur í gegn</li>
                <li>Framleiddir fyrir 3,4,5 og 6 hjól</li>
            </ul>
        </div>
        <img id="myImg" class="hjolastandarar_img" src="~/images/reidhjol_standarar.png" />
        <br />
        <br />
        <br />
        <br />
        <!-- The Modal -->
        <span class="test">
            <div id="myModal" class="modal">
                <img class="modal-content" id="img01">
            </div>
        </span>
    </div>
</body>
</html>

<script>
    // Get the modal
    var modal = document.getElementById('myModal');
    document.addEventListener('click', (event) => {
        if (modal.style.display == "none") {
            console.log(modal.style.display)
            modal.style.display = "none";

        }

    });

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    var img = document.getElementById('myImg');
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");
    img.onclick = function () {
        modal.style.display = "block";
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
    }

    // Get the <span> element that closes the modal
    /*  var span = document.getElementsByClassName("close")[0];

      // When the user clicks on <span> (x), close the modal
      span.onclick = function () {
          modal.style.display = "none";
      }*/
    var spaner = document.getElementsByClassName("test")[0];
    spaner.onclick = function () {
        modal.style.display = "none";
    }
</script>
