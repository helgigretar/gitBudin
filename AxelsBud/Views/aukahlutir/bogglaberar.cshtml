@model AxelsBud.Models.bjollur
@{
    ViewBag.Title = "Bögglaberar";
}
<link href="~/MyCss/hjolin.css" rel="stylesheet" type="text/css" />
<link href="~/MyCss/frontPage.css" rel="stylesheet" type="text/css" />
<html>
<body>
    <!-- Fyrsta myndin Þetta er flipi á reiðhjólasíðuna-->
    <div class="container" style="display:flex;">
        <div class="voruListarnir">
            <div target="voruListi">
                <div class="dropDownListiVoruContainer">
                    <ul class="unorderdListVoruContainer">
                        <div class="vorurhaus">aukahlutir</div>
                        <li class="voruLinkur">@Html.ActionLink("bjöllur", "", "bjollur")</li>
                        <li class="voruLinkur">@Html.ActionLink("bretti", "", "bretti")</li>
                        <li class="voruLinkur_valinn">@Html.ActionLink("bögglaberar", "", "bogglaberar")</li>
                        <li class="voruLinkur">@Html.ActionLink("hraðamælar", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("körfur", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("ljós", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("pumpur", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("standarar", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("stýrisendar", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("vatnsflöskur og statíf", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("lásar", "", "kvennahjol")</li>
                        <li class="voruLinkur">@Html.ActionLink("ýmislegt", "", "kvennahjol")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="vorurnar">
            <div class="col-md-4" target="vara">
                <a href="/vorur?@(Model.audkenin[0])">
                    <div class="voruContainer">
                        <p class="voruFyrirsogn">@Model.nofn[0]</p>
                        <img src="~/images/@(Model.myndir[0]).png" width="200" height="200" />
                        <p class="price"> @Model.verdin[0] kr.</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4" target="vara">
                <a href="/vorur?@(Model.audkenin[1])">
                    <div class="voruContainer">
                        <p class="voruFyrirsogn">@Model.nofn[1]</p>
                        <img src="~/images/@(Model.myndir[1]).png" width="200" height="200" />
                        <p class="price">@Model.verdin[1] kr.</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</body>
</html>
