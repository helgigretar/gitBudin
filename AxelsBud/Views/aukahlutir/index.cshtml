@model AxelsBud.Models.bjollur
@{
    ViewBag.Title = "Bjöllur";
}
<link href="~/MyCss/hjolin.css" rel="stylesheet" type="text/css" />
<link href="~/MyCss/frontPage.css" rel="stylesheet" type="text/css" />
<html>
<body>
    <div class="content_container_wrapper">
        <div class="menu_container">         
            <ul class="menu_list">
                <a  class="menu_item menu_title" href="aukahlutir"><li>Aukahlutir</li></a>
                <a  class="menu_item" href="aukahlutir/bjollur"><li>Bjöllur</li></a>
                <a  class="menu_item" href="aukahlutir/bretti"><li>Bretti</li></a>
                <a  class="menu_item" href="aukahlutir/bogglaberar"><li>Bögglaberar</li></a>
                <a  class="menu_item" href="aukahlutir/hradamaelar"><li>Hraðamælar</li></a>
                <a  class="menu_item" href="aukahlutir/pedalar"><li>Körfur</li></a>
                <a  class="menu_item" href="aukahlutir/ljos"><li>Ljós</li></a>
                <a  class="menu_item" href="aukahlutir/pumpur"><li>Pedalar</li></a>
                <a  class="menu_item" href="aukahlutir/pumpur"><li>Pumpur</li></a>
                <a  class="menu_item" href="aukahlutir/standarar"><li>Standarar</li></a>
                <a  class="menu_item" href="aukahlutir/styrisendar"><li>Stýrisendar</li></a>
                <a  class="menu_item" href="aukahlutir/vatnsfloskur_statif"><li>Vatnsflöskur og statíf</li></a>
                <a  class="menu_item" href="aukahlutir/hnakkar"><li>Hnakkar</li></a>
                <a  class="menu_item" href="aukahlutir/lasar"><li>Lásar</li></a>
            </ul>
        </div>
        <div class="content_container with_menu">
              for (int count = 0; count < Model.maxer; count++)
                {
                    <div class="content_grid_element">
                        <a href="/vorur?@(Model.audkenin[@count])">
                            <h3 class="content_grid_title">@Model.nofn[@count]</h3>
                            <div class="content_grid_img_wrapper">
                                <img class="content_grid_img" src="~/images/@(Model.myndir[@count]).png" />
                            </div>
                            <p class="content_grid_price"> @Model.verdin[@count] kr.</p>
                        </a>
                    </div>
                }

            }

        </div>
    </div>
</body>
</html>
